<?xml version="1.0" encoding="UTF-8"?>
<pnp udi="{{ udi }}" version="1.0" xmlns="urn:cisco:pnp">
    <request correlator="{{ correlator }}" xmlns="urn:cisco:pnp:image-install">
        <image>
            <copy>
                <source>
                    <location>{{ base_url }}/{{ image_name }}</location>
                    <checksum>{{ md5 }}</checksum>
                </source>
                <destination>
                    <location>{{ destination }}:{{ image_name }}</location>
                </destination>
            </copy>
        </image>
        <reload>
            <reason>pnp image installation</reason>
            <delayIn>{{ delay }}</delayIn>
            <user>pnp-install-image</user>
            <saveConfig>false</saveConfig>
        </reload>
    </request>
</pnp>
